<div class="container">
  <div class="row">
    <div class="col">
      <h2><strong><span style="background-color: #FFDBC9;">ジャンルカテゴリ一覧・追加</span></strong></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-11 offset-1">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.label 'ジャンル・カテゴリ名' %>
          <%= f.text_field :name, placeholder: "ジャンル・カテゴリ名" %>
          <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-3 offset-1">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><strong>ジャンル・カテゴリ</strong></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
