<h2><strong>ユーザー情報編集</strong></h2>

<%= form_with model: @user, url: user_path(@user), method: :patch, local:true do |f| %>
<table>
  <tr class="form-group">
    <th>氏名</th>
    <td><%= f.text_field :last_name, class: "form-control last_name" %></td>
    <td></td>
    <td><%= f.text_field :first_name, class: "form-control first_name" %></td>
  </tr>
  <tr class="form-group">
    <th>フリガナ</th>
    <td><%= f.text_field :last_name_kana, class: "form-control last_name_kana" %></td>
    <td></td>
    <td><%= f.text_field :first_name_kana, class: "form-control first_name_kana" %></td>
  </tr>
  <tr class="form-group">
    <th>メールアドレス</th>
    <td><%= f.email_field :email, class: "form-control email" %></td>
  </tr>
  <tr class="form-group">
    <th>住所</th>
    <td><%= f.text_field :address, class: "form-control address" %></td>
  </tr>
  <tr class="form-group">
    <th>電話番号</th>
    <td><%= f.text_field :telephone_number, class: "form-control telephone_number" %></td>
  </tr>
  <tr class="form-group">
    <th>プロフィール画像</th>
    <td><%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %></td>
  </tr>
  <tr class="form-group">
    <th>ニックネーム</th>
    <td><%= f.text_field :name, class: "form-control name" %></td>
  </tr>
  <tr class="form-group">
    <th>自己紹介</th>
    <td><%= f.text_field :self_introduction, class: "form-control self_introduction" %></td>
  </tr>
  <tr>
    <td>
      <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
    </td>
    <td>
      <%= link_to "退会する", users_check_path, class: 'btn btn-secondary' %>
    </td>
  </tr>
</table>
<% end %>
