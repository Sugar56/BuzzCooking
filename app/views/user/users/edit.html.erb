<div class="container">
  <div class="row">
    <div class="col">
      <h2><strong><span style="background-color: #FFDBC9;">ユーザー情報編集</span></strong></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-11 offset-1">
      <%= form_with model: @user, url: user_path(@user), method: :patch, local:true do |f| %>
      <table>
        <tr>
          <div class="field">
            <td>氏名</td>
            <td><%= f.text_field :last_name, class: "form-control last_name" %></td>
            <td><%= f.text_field :first_name, class: "form-control first_name" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana, class: "form-control last_name_kana" %></td>
            <td><%= f.text_field :first_name_kana, class: "form-control first_name_kana" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td>メールアドレス</td>
            <td><%= f.email_field :email, class: "form-control email" %></td>
            <td></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td>住所</td>
            <td><%= f.text_field :address, class: "form-control address" %></td>
            <td></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number, class: "form-control telephone_number" %></td>
            <td></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td>プロフィール画像</td>
            <td><%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %></td>
            <td></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td>ニックネーム</td>
            <td><%= f.text_field :name, class: "form-control name" %></td>
            <td></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td>自己紹介</td>
            <td><%= f.text_area :self_introduction, class: "form-control self_introduction" %></td>
            <td></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td></td>
            <td><%= f.submit "編集内容を保存", class: 'btn btn-success' %></td>
            <td><%= link_to "退会する", users_withdraw_path(current_user.id), method: :patch, data: { confilm: "本当に退会しますか？" }, class: 'btn btn-danger' %></td>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
