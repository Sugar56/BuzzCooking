<div class="container" style="padding-top: 10px;">
  <div class="row" style="margin-bottom: 10px;">
    <div class="col">
      <h2><strong><span style="background-color: #FFDBC9;">投稿レシピ一覧</span></strong></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-11 offset-1" style="margin-bottom: 50px;">
      <table class="table">
        <thead>
          <tr>
            <th>レシピid</th>
            <th><u>レシピ名</u></th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @recipes.each do |recipe| %>
          <tr>
            <td><%= recipe.id %></td>
            <td>
              <%= link_to admin_recipe_path(recipe.id) do %>
                <%= recipe.name %>
              <% end %>
            </td>
            <td><%= recipe.genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row" style="margin-bottom: 50px;">
        <div class="col">
          <%= paginate @recipes %>
        </div>
      </div>
    </div>
  </div>
</div>
