<h2>管理者ログイン</h2>

<%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <table>
    <tr>
      <div class="field">
        <td>メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td>パスワード</td>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </div>
    </tr>
    <tr>
      <div class="actions">
        <td></td>
        <td><%= f.submit "ログイン", class: "btn btn-success" %></td>
      </div>
    </tr>
  </table>
<% end %>

<%= render "admin/shared/links" %>
