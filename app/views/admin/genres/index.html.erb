<div class="container" style="padding-top: 10px;">
  <div class="row" style="margin-bottom: 10px;">
    <div class="col">
      <h2><strong><span style="background-color: #FFDBC9;">ジャンルカテゴリ一覧・追加</span></strong></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-11 offset-1" style="margin-bottom: 30px;">
      <% if @genre.errors.any? %>
        <%= @genre.errors.count %>件のエラーが発生しました
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
      <table>
        <tr>
          <td><%= f.label 'ジャンル・カテゴリ名' %></td>
          <td><%= f.text_field :name, placeholder: "ジャンル・カテゴリ名" %></td>
          <td><%= f.submit "新規登録", class: "btn btn-sm btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-1" style="margin-bottom: 50px;">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><strong>ジャンル・カテゴリ</strong></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' %></td>
            <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, data: { confilm: "本当に退会しますか？" }, class: "btn btn-sm btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
