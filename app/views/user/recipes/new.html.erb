<div class="container">
  <div class="row">
    <div class="col">
      <h2><strong>新規レシピ投稿</strong></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-11 offset-1">
      <%= form_with model: @recipe, url: recipes_path, method: :post, local: true do |f| %>
      <table>
        <tr>
          <td>レシピ名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>投稿画像</td>
          <td><%= f.file_field :image, accept: "image/*"%></td>
        </tr>
        <tr>
          <td>レシピ説明</td>
          <td><%= f.text_area :recipe_explanation %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td></td>
        </tr>
        <tr>
          <td>材料</td>
          <td>
            <%= f.fields_for :ingredients do |t| %>
              <%= render "user/recipes/recipe_ingredient_fields", f: t %>
            <% end %>
            <div class="row">
              <div class="col-md-auto">
                <div id="detail-association-insertion-point"></div>
              </div>
            </div>
            <%= link_to_add_association "+フォームを追加", f, :ingredients, partial: "recipe_ingredient_fields", class: "btn btn-secondary btn-block",data: {association_insertion_node: '#detail-association-insertion-point',association_insertion_method: 'after'} %>
          </td>
        </tr>
        <tr>
          <td>調理法</td>
          <td>
            <%= f.fields_for :cooking_methods do |t| %>
              <%= render "user/recipes/recipe_cooking_methods_fields", f: t %>
            <% end %>
            <div class="row">
              <div class="col-md-auto">
                <div id="detail-association-insertion-point2"></div>
              </div>
            </div>
              <%= link_to_add_association "+フォームを追加", f, :cooking_methods, partial: "recipe_cooking_methods_fields",
              class: "btn btn-secondary btn-block",
              data: {
              association_insertion_node: '#detail-association-insertion-point2',
              association_insertion_method: 'after'
              }%>
          </td>
        </tr>
        <tr>
          <td>ポイント</td>
          <td><%= f.text_area :point_explanation %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "投稿", class: "btn btn-sm btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
