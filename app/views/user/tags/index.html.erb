<div class="container" style="padding-top: 10px;">
  <div class="row" style="margin-bottom: 10px;">
    <div class="col d-flex flex-row">
      <h2><strong><span style="background-color: #FFDBC9;">タグ一覧</span></strong></h2>
      (全<%= @tags.count %>件)
    </div>
  </div>

  <div class="row offset-1" style="padding-bottom: 50px;">
    <div class="col-4">
      <table class="table">
        <% @tags.each do |tag| %>
        <tr>
          <td><%= link_to tag.name, recipes_path(name: tag.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
