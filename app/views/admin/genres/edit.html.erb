<h2><strong>ジャンル・カテゴリ編集</strong></h2>

<div class="genre-addition">
  <%= form_with model: @genre, url: admin_genre_path(@genre), local: true do |f| %>
    <div class="form-group">
      <%= f.label 'ジャンル・カテゴリ名' %>
      <%= f.text_field :name %>
      <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success" %>
    </div>
  <% end %>
</div>
