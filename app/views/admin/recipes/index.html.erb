<div class="container">
  <div class="row">
    <div class="col">
      <h2><strong>投稿レシピ一覧</strong></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-11 offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>レシピid</th>
            <th><u>レシピ名</u></th>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @recipes.each do |recipe| %>
          <tr>
            <td><%= recipe.id %></td>
            <td></td>
            <td>
              <%= link_to admin_recipe_path(recipe.id) do %>
                <%= recipe.name %>
              <% end %>
            </td>
            <td><%= recipe.@grnre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @recipes %>
    </div>
  </div>
</div>
