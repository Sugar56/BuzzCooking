<div class="container">
  <div class="row">
    <div class="col">
      <h2><strong>ユーザー一覧</strong></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-11 offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>ユーザーid</th>
            <th>画像</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td></td>
            <td>
              <%= link_to admin_user_path(user.id) do %>
                <%= user.last_name %> <%= user.first_name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted %>
                <div style="color:red;">退会</div>
              <% else %>
                <div style="color:green;">有効</div>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
